{
  "name": "@gnosis-guild/zodiac-core-modifier-roles",
  "version": "2.1.0",
  "description": "A Zodiac modifier that allows avatars to enforce granular, role-based, permissions for attached modules.",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "hardhat compile",
    "clean": "hardhat clean",
    "test": "hardhat test",
    "deploy:standalone": "hardhat deploy:standalone --network",
    "deploy:mastercopy": "hardhat deploy:mastercopy --network",
    "deploy:proxy": "hardhat deploy:proxy --network",
    "deploy:adapters": "hardhat deploy:adapters --network",
    "verify:standalone": "hardhat verify:standalone --network",
    "coverage": "hardhat coverage",
    "fmt": "yarn fmt:sol && yarn fmt:ts",
    "fmt:sol": "prettier 'contracts/**/*.sol' -w",
    "fmt:ts": "prettier '(test|src)/**/*.ts' -w",
    "prepack": "yarn build"
  },
  "devDependencies": {
    "@gnosis-guild/zodiac-core": "^1.1.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.7",
    "@nomicfoundation/hardhat-ethers": "^3.0.7",
    "@nomicfoundation/hardhat-ignition": "^0.15.5",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.9",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.9",
    "@nomicfoundation/ignition-core": "^0.15.5",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/mocha": "10.0.4",
    "@types/yargs": "17.0.33",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "chai": "4.3.10",
    "eslint": "8.53.0",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-prettier": "4.2.1",
    "eth-provider": "^0.13.6",
    "ethers": "^6.13.2",
    "hardhat": "^2.22.7",
    "hardhat-contract-sizer": "2.10.0",
    "hardhat-gas-reporter": "^2.2.1",
    "prettier-plugin-solidity": "1.1.3",
    "solidity-coverage": "0.8.4",
    "ts-node": "10.9.1",
    "typechain": "8.3.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@gnosis.pm/safe-contracts": "1.3.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@openzeppelin/contracts-upgradeable": "^5.0.0",
    "dotenv": "16.3.1"
  },
  "installConfig": {
    "hoistingLimits": "workspaces"
  }
}
